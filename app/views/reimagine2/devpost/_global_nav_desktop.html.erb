<div class="contain-to-grid hide-for-small hide-for-medium">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <%= render "reimagine2/devpost/global_nav/logo", presenter: presenter %>
      </li>
    </ul>

    <section class="top-bar-section">
      <%= render 'reimagine2/devpost/global_nav/world', presenter: presenter %>

      <div class="right">
        <ul>
          <li>
            <%= link_to 'Host a hackathon', reimagine_post_url, class: 'main-link', data: { role: 'for-orgs' } %>
          </li>

          <li class="search-expand-container desktop main-link">
            <a data-toggle-desktop-search><i class="fas fa-search"></i></a>
          </li>

          <li id="desktop-search-form-container" class="hide">
            <%= form_tag(platform_url(path: "/hackathons"), class: "search-bar-form large flex-row", method: :get) do %>
              <%= render "reimagine2/devpost/global_nav/hackathon_search_fields" %>
            <% end %>
          </li>
        </ul>

        <%= render 'reimagine2/devpost/global_nav/account', presenter: presenter %>
      </div>
    </section>
  </nav>
</div>
